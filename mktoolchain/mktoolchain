#!/bin/sh

### Environment ################################################################
SOURCE=$(dirname $(dirname $(realpath $0)))
printf "[\e[36;1mTOOL\e[0m] Toolchain Builder\n"
printf "[\e[34;1mINFO\e[0m] Building from $SOURCE...\n"

### Dependencies ###############################################################
source build-helpers

require make

unfatalrequire qemu

### Source Clone ###########################################################
run "git Init submodules" git submodule init
run "Git Update submodules" git submodule update

### We're done! ################################################################
printf "[\e[91;1mN\e[93mI\e[92mC\e[94mE\e[0m] Toolchain built!\n"
